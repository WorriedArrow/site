---
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import BaseHead from "./BaseHead.astro";
import Footer from "./Footer.astro";
import Header from "./Header.astro";

interface Props {
    title?: string;
    desc?: string;
}
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={Astro.props.title ? `${Astro.props.title} / ${SITE_TITLE}` : SITE_TITLE} description={Astro.props.desc ?? SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<slot />
		</main>
		<Footer />
	</body>
</html>